@model Movie

@{
    ViewData["Title"] = "Add a Movie";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" class="form-control" required />
    <label asp-for="Genre">Genre:</label>
    <input asp-for="Genre" class="form-control" required />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director" class="form-control" required />
    <label asp-for="ReleaseYear">Release Year:</label>
    <input asp-for="ReleaseYear" type="number" class="form-control" required />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" class="form-control">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <label asp-for="Edited">Edited:</label>
    <input asp-for="Edited" class="form-control"/>
    <label asp-for="LentTo">LentTo:</label>
    <input asp-for="LentTo" class="form-control"/>
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" class="form-control"/>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>